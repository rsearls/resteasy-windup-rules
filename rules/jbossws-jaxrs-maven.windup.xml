      <when>
        <project>
            <artifact groupId="org.jboss.resteasy" artifactId="resteasy-jaxrs"/>
        </project>
      </when>
      <perform>
        <lineitem message="Maven archive org.jboss.resteasy:resteasy-jaxrs found.  It must be replaced with org.jbossws:jbossws-jaxrs." />
      </perform>      
    </rule>
    
