    <rules id="jaxrs-classes-rules">

        <rule id="resteasy-class-1">
            <when>
                <filecontent pattern="PostProcessInterceptor"/>
            </when>

            <perform>
                <iteration>
                    <hint title="RestEasy's PostProcessInterceptor" effort="1"
                          severity="mandatory">
                        <message>
                            Code using PostProcessInterceptor must be replaced
                            by the JAX-RS 2.0 compliant interceptor facility.
                        </message>
                        <!--
                        <link
                            href="http://cxf.apache.org/docs/jax-rs-basics.html#JAX-RSBasics-Parameterbeans"
                            title="Parameter Beans"/>
                        <link
                            href="http://docs.jboss.org/resteasy/docs/3.0.13.Final/userguide/html/_Form.html"
                            title="Form annotation"/>
                        -->
                    </hint>
                </iteration>
            </perform>
        </rule>
